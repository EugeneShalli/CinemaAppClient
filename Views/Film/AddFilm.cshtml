@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Add Film</h2>
<form method="post" action="/Film/Put">
    <div class="form-group">
        <label for="Title">Title<small class="text-danger"> (requied)</small></label>
        <input type="text" name="Title" class="form-control" id="Title" aria-describedby="emailHelp" required>
        
    </div>
    <div class="form-group">
        <label for="Genre">Genre<small class="text-danger"> (requied)</small></label>
        <input type="text" name="Genre" class="form-control" id="Genre" required>
    </div>
    <div class="form-group">
        <label for="Language">Language</label>
        <input type="text" name="Language" class="form-control" id="Language">
    </div>
    <div class="form-group">
        <label for="Country">Country <small class="text-danger"> </small></label>
        <input type="text" name="Country" class="form-control" id="Country" >
    </div>
    
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
